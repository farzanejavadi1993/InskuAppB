<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="wantAdv"
            type="ir.kitgroup.inskuappb.model.WantAdvertisement" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/img_company"
                setImageView="@{wantAdv.companyId}"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:siBorderColor="#ccc"
                app:siRadius="2dp" />

            <TextView

                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img_company"
                android:text="@{wantAdv.companyName}"
                android:textColor="@color/normal_color"
                android:textSize="@dimen/normal_size" />
        </RelativeLayout>


        <RelativeLayout
            
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutCompany">


            <LinearLayout
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:text="@{wantAdv.advertisementTitle}"
                    android:textColor="#000"
                    android:textSize="@dimen/less_normal_size"
                    app:layout_constraintEnd_toStartOf="@+id/img_profile_chat"
                    app:layout_constraintTop_toTopOf="@+id/img_profile_chat"
                    tools:ignore="SpUsage"
                    tools:text="شرکت کیت گروپ" />

                <TextView
                    android:id="@+id/tv_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:text="@{wantAdv.callMeStatusMobile.name}"
                    android:textColor="@color/red"
                    android:textSize="@dimen/small_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/img_profile_chat"
                    app:layout_constraintEnd_toStartOf="@+id/img_profile_chat"
                    tools:text="salam" />
            </LinearLayout>


        </RelativeLayout>

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_centerVertical="true"
            android:id="@+id/img_profile_adv"
            setImageViewAdvertise="@{wantAdv.advertisementId}"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:siBorderColor="#ccc"
            app:siRadius="8dp" />


        <View

            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/detail"
            android:background="#ccc" />
    </RelativeLayout>
</layout>
