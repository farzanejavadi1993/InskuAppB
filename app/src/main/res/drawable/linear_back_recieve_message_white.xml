<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow Layers-->

    <item>
        <rotate
            android:fromDegrees="35"
            android:pivotX="100%"
            android:pivotY=".50%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="4dp"/>
                <padding
                    android:bottom="1px"
                    android:left="1px"
                    android:right="1px"/>
                <solid android:color="#01000000"/>
            </shape>
        </rotate>
    </item>
    <item android:right="8dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px"/>
            <solid android:color="#01000000"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!--===============-->

    <item android:right="8dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="1px"/>
            <solid android:color="#EEEEEE"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!--===============-->

    <item android:right="8dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px"/>
            <solid android:color="#EEEEEE"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="35"
            android:pivotX="100%"
            android:pivotY=".50%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="4dp"/>
                <padding
                    android:bottom="1px"
                    android:left="1px"
                    android:right="1px"/>
                <solid android:color="#EEEEEE"/>
            </shape>
        </rotate>
    </item>


    <item android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#F4F4F4"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!--ForeGround-->

    <item>
        <rotate
            android:fromDegrees="35"
            android:pivotX="100%"
            android:pivotY=".50%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="4dp"/>
                <solid android:color="#F4F4F4"/>
            </shape>
        </rotate>
    </item>

</layer-list>